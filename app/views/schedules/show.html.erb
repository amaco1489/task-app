<h2>スケジュール詳細</h2>

<%= form_with model: @schedule do |f| %>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_day.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_day.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <%= @schedule.all_day ? '○' : '' %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>
<% end %>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
    <li><%= link_to "スケジュールを編集する", :edit_schedule %></li>
    <li><%= link_to "スケジュールを削除する", :schedule, data:{turbo_method: :delete, turbo_confirm: "本当に削除しますか？"} %></li>
  </ul>
</div>